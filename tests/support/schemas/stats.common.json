{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "stats": {
      "type": "object",
      "required": [
        "num_checkins",
        "longest_streak",
        "current_streak"
      ],
      "properties": {
        "num_checkins": {
          "type": "integer"
        },
        "longest_streak": {
          "type": "integer"
        },
        "current_streak": {
          "type": "integer"
        }
      }
    },
    "global": {
      "type": "object",
      "required": [
        "num_checkins",
        "num_players"
      ],
      "properties": {
        "num_checkins": {
          "type": "integer"
        },
        "num_players": {
          "type": "integer"
        }
      }
    }
  }
}